<div class="habit" data-rev="{{rev}}" data-id="{{id}}">
  <input class="completeHabit" type="checkbox" {{isComplete this.habit}}/>
  <span class="nameLabel">{{habit.name}}</span>
  $<span class="amountLabel">{{habit.amount}}</span>
  <button class="button button-clear editHabit">Edit</button>
  <button style="color:red;" class="button button-clear archiveHabit">
    Archive
  </button>
  <!-- TODO: Move style to a CSS file -->
  <form class="editHabitForm" style="display:none;">
    <fieldset>
      <label>Name</label>
      <input name="name" type="text" value="{{habit.name}}" required>
      <label>Reward</label>
      <input name="amount" type="number" min="0.01" step="0.01"
                                                    value="{{habit.amount}}" required>
      <button class="button button-outline cancel">Cancel</button>
      <input class="button" value="Submit" type="Submit">
    </fieldset>
  </form>
</div>
