<div class="chore" data-rev="{{rev}}" data-id="{{id}}">
  <input class="complete" type="checkbox" {{choreIsComplete chore}}>
  <span class="nameLabel">{{chore.name}}</span>
  $<span class="amountLabel">{{chore.amount}}</span>
  <button class="button button-clear edit">Edit</button>
  <form class="editForm" style="display:none;">
    <fieldset>
      <label>Name</label>
      <input name="name" type="text" value="{{chore.name}}" required>
      <label>Amount</label>
      <input name="amount" type="number" min="0.01" step="0.01"
                                                    value="{{chore.amount}}" required>
      <button class="button button-outline cancel">Cancel</button>
      <input class="button" value="Submit" type="Submit">
    </fieldset>
  </form>
</div>
